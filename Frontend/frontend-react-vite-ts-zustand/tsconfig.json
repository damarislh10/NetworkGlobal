{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,

        /* Paths */
        "baseUrl": "./src",
        "paths": {
            "@assets/*": ["./assets/*"],
            "@components/*": ["./components/*"],
            "@models/*": ["./models/*"],
            "@pages/*": ["./pages/*"],
            "@store/*": ["./store/*"],
            "@lib/*": ["./lib/*"],
            "@styles/*": ["./styles/*"]
        }
    },
    "include": ["src"],
    "references": [{ "path": "./tsconfig.node.json" }],
}